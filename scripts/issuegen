#!/bin/bash

set -e

print_issue() {
    echo
    echo 'This is \n (\s \m \r) \t'
    for note in /run/issue.d/*; do
        [ -f "${note}" ] && cat "${note}"
    done
    echo
    echo -e '\e[31;1mCoreOS Container Linux is no longer maintained or updated.\nSee https://coreos.com/os/eol/\e[0m\n'
}

case "$1" in
    add)
        mkdir -p /run/issue.d
        echo "${2}: \\4{${2}} \\6{${2}}" > "/run/issue.d/${2}"
        ;;
    remove)
        rm -f "/run/issue.d/${2}"
        ;;
esac

print_issue > /run/issue
